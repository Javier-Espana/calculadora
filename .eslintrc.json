{
  "extends": [
    "standard",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "semi": ["error", "never"],
    "max-len": ["error", { "code": 120 }],
    "react/react-in-jsx-scope": "off",
    "react/prop-types": "off",
    "space-before-function-paren": ["error", "always"],
    "jsx-quotes": ["error", "prefer-single"]
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "env": {
    "browser": true,
    "node": true
  }
}